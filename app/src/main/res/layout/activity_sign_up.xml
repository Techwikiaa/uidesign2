<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/imgbtn"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_back"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi!"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="120dp"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_below="@+id/imgbtn"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:layout_marginTop="5dp"
        android:textColor="#A6A1A1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="65dp"
         />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nickname2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="enter your nickname"
        android:textColor="#AF4C60"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nickname"
            android:singleLine="true"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/person_vw"
            android:drawablePadding="20dp"
            tools:ignore="TouchTargetSizeCheck"
             />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="enter your email"
            android:layout_gravity="center_horizontal"
            android:textColor="#AF4C60"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            tools:ignore="HardcodedText">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/emai_vw"
                tools:ignore="RtlHardcoded,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


<com.google.android.material.textfield.TextInputLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:hintTextAppearance="@color/black"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="30dp"
    app:passwordToggleEnabled="true"
    app:passwordToggleTint="#FB2C2C"
    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="enter a password"
        android:textSize="18sp" />
</com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editConfirmpw1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="#AF4C60"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#FB2C2C"
        tools:ignore="UnknownId,TouchTargetSizeCheck">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editConfirmpw"
            android:ems="20"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="confirm password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/password_vw"
            android:drawablePadding="20dp"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:background="@drawable/login_bg"
        android:text="Sign Up"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/editPassword1"
        android:textColor="#FFF"
        android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_gravity="center_horizontal">
    <View
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="#B3ACAC"  />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="1dp"
        android:background="#B3ACAC"/>

</LinearLayout>

    <TextView
        android:id="@+id/soicalmedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Social Media Signup"
        android:textColor="#898A86"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/logofb"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/soicalmedia"
            android:src="@drawable/google_g_icon"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="50dp"
            android:layout_below="@+id/soicalmedia"
            android:src="@drawable/facebook_logo"/>
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/soicalmedia"
            android:src="@drawable/apple"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="#0B14CD"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>